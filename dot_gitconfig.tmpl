# Local/private config goes in the include
[include]
  path = ~/.gitconfig.local
[github]
  user = khanh-codes
[user]
  email = {{ .email }}
  name = Khanh Tran
[alias]
  co = checkout
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[fetch]
  prune = true
[credential "https://github.com/"]
  username = khanh-codes
[init]
  defaultBranch = main
[log]
  decorate = true
[pull]
  rebase = true
[push]
  default = current
  autoSetupRemote = true
[rebase]
  autosquash = true